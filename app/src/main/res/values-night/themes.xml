<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InstagramClone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!-- Customize your light theme here. -->
        <!-- Remove or override the colorPrimary if it's not needed -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Set Background Color -->
        <item name="android:windowBackground">@android:color/white</item> <!-- Change to desired color -->

        <!-- Set Status Bar Color -->
        <item name="android:statusBarColor">@color/white</item>

        <!-- Optional: Set Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="BottomNavigationViewTransparent" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">
            <!-- Ripple Effect -->
            ?attr/selectableItemBackgroundBorderless
        </item>
        <item name="itemIconTint">@color/white</item> <!-- Keep the icons white -->
        <item name="itemTextColor">@color/white</item> <!-- Keep the text white -->
    </style>
</resources>